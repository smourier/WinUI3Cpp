<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="TreeViewSample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TreeViewSample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Center"
        Orientation="Vertical">
        <Button x:Name="myButton" Click="myButton_Click" HorizontalAlignment="Center">Show Tree View</Button>
        <TreeView x:Name="myTreeView" HorizontalAlignment="Stretch" ItemTemplateSelector="{StaticResource FileSystemTemplateSelector}" />
    </StackPanel>
</Window>
